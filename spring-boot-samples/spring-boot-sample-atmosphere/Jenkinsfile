pipeline {
    agent any
    
    environment { 
        PROJECT_PATH = 'spring-boot-samples/spring-boot-sample-atmosphere'
    }
    
    stages {
        stage('Preparation') {
            steps {
                echo 'Doing nothing in preparation..'
            }
        }
        
        stage('Build') {
            agent {
                docker {
                    image 'maven:3.6.0-jdk-8-alpine'
                    reuseNode true
                }
            }    
            steps{
                dir(PROJECT_PATH){
                    sh 'pwd'
                    echo 'Starting Build stage...'
                    echo 'Compiling, testing and building...'
                    sh 'mvn clean package'
                }
            }     

        }
        
        stage('Results'){
            steps{
                dir(PROJECT_PATH){
                    echo 'Starting Results stage...'
                    junit 'target/surefire-reports/TEST-*.xml'
                    archiveArtifacts 'target/*.jar'
                }      
            }
        }
        
    }

    post { 
        always {
            echo 'Cleaning workspace...'
            cleanWs()
        }
    }
}